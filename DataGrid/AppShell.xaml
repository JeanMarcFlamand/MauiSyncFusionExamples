<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DataGrid.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DataGrid"
    xmlns:views="clr-namespace:DataGrid.Views"
    Shell.FlyoutBehavior="Flyout">


    <Shell.FlyoutHeader>
        <VerticalStackLayout>
            <Label Text="SyncFusion DataGrid"></Label>
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Home">

        <ShellContent
            Title="Main Page"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

    </FlyoutItem>

    <FlyoutItem Title="Order Info Repository">

        <ShellContent
            Title="Order Info Repository"
            ContentTemplate="{DataTemplate views:OrderInfoRepositoryView}"
            Route="OrderInfoRepositoryView" />
        
    </FlyoutItem>

    <FlyoutItem Title="Settings">

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate views:SettingView }"
            Route="SettingView" />

    </FlyoutItem>


    <FlyoutItem Title="About me">

        <ShellContent
            Title="About me"
            ContentTemplate="{DataTemplate views:About}"
            Route="About" />

    </FlyoutItem>
    
    
   
    
       
    

</Shell>
